pipeline {
    agent any
    environment {
        SECRET_FILE = credentials('my-secret-file')
    }
    stages {
        stage('Use Secret File') {
            steps {
                sh '''
                    echo "Using secret file located at $SECRET_FILE"
                    # Example: Display the content of the secret file
                    cat $SECRET_FILE
                '''
            }
        }
    }
}
